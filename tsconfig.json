{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react-native",
    "outDir": "build",
    "isolatedModules": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "rootDirs": ["src"],
    "skipLibCheck": true,
    "types": ["react-native", "jest", "node"]
  }
}